<h3 class="text-3xl text-gray-300 mb-4 text-center"> Contact me </h3>
<p class="text-xl text-gray-300 mb-4 text-center"> Send me a message and start the conversation </p>
<%= form_with url: contact_path do |form| %>
  <div class="flex justify-between mb-4">
    <div class="flex flex-col w-2/5">
      <%= form.label :first_name, class: "text-gray-200" %>
      <%= form.text_field :first_name %>
    </div>
    <div class="flex flex-col w-3/5 ml-4">
      <%= form.label :last_name, class: "text-gray-200" %>
      <%= form.text_field :last_name %>
    </div>
  </div>
  <div class="flex flex-col">
    <%= form.label :email, class: "text-gray-200" %>
    <%= form.email_field :email %>
  </div>
  <div class="flex flex-col mt-4">
    <%= form.label :message, class: "text-gray-200" %>
    <%= form.text_area :message, class:"h-40", style: "resize: none;", value: "Hey Enoch I want to contact you about something" %>
  </div>
  <div class="mt-4">
    <%= form.submit "send message", class: "bg-green-500 text-green-50 p-2 rounded-lg cursor-pointer text-lg" %>
  </div>
<% end %>
