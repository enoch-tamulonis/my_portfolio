  <div class="mt-14 w-full grid md:grid-cols-2 xl:grid-cols-4 gap-4">
    <div class="w-full flex flex-col items-center">
      <span class="text-gray-200 text-lg font-semibold mb-6"> Ruby On Rails </span>
      <%= image_tag "circle-rails", class: "object-cover w-32" %>
    </div>
    <div class="w-full flex flex-col items-center">
      <span class="text-gray-200 text-lg font-semibold"> Javascript </span>
      <%= image_tag "circle-js", class: "object-cover w-40" %>
    </div>
    <div class="w-full flex flex-col items-center">
      <span class="text-gray-200 text-lg mb-4 font-semibold"> HTML </span>
      <%= image_tag "circle-html", class: "object-cover w-32" %>
    </div>
    <div class="w-full flex flex-col items-center">
      <span class="text-gray-200 text-lg mb-2 font-semibold"> CSS </span>
